---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header
  class="sticky top-0 z-50 w-full bg-[#F2F0ED]/90 backdrop-blur-md border-b border-[#E6E1DB]/50"
>
  <nav
    class="max-w-3xl mx-auto px-4 sm:px-6 h-16 sm:h-20 flex items-center justify-between"
  >
    <a
      href="/"
      class="text-lg sm:text-xl font-serif font-bold tracking-tight text-[#38352E] hover:text-[#D97757] transition-colors"
    >
      {SITE_TITLE}.
    </a>

    <div
      class="flex items-center gap-3 sm:gap-6 text-xs sm:text-sm font-medium text-[#6B665F]"
    >
      <HeaderLink href="/blog">文章</HeaderLink>
      <HeaderLink href="/about">关于</HeaderLink>
      <a
        href="/rss.xml"
        class="hover:text-[#38352E] transition-colors hidden sm:inline"
      >
        订阅
      </a>
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0;
  }
  /* 确保导航链接在移动端有足够的触摸区域 */
  nav a {
    padding: 0.5rem;
    min-height: 44px;
    display: inline-flex;
    align-items: center;
  }
  @media (max-width: 640px) {
    nav a {
      padding: 0.375rem;
    }
  }
</style>
